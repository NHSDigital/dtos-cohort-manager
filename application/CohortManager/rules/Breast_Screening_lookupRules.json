[
  {
    "WorkflowName": "Common",
    "Rules": [
      {
        "RuleName": "36.ValidatePrimaryCareProvider.NonFatal",
        "LocalParams": [
          {
            "Name": "newRecordType",
            "Expression": "newParticipant.RecordType == Actions.New"
          },
          {
            "Name": "notNewRecordType",
            "Expression": "newParticipant.RecordType != Actions.New"
          },
          {
            "Name": "validPrimaryCareProvider",
            "Expression": "string.IsNullOrEmpty(newParticipant.PrimaryCareProvider) OR dbLookup.ValidatePrimaryCareProvider(newParticipant.PrimaryCareProvider)"
          },
          {
            "Name": "validReasonForRemovalFields",
            "Expression": "newParticipant.ReasonForRemoval != null OR newParticipant.ReasonForRemovalEffectiveFromDate != null"
          }
        ],
        "Expression": "(newRecordType AND validPrimaryCareProvider) OR (notNewRecordType AND validPrimaryCareProvider AND validReasonForRemovalFields)",
        "Actions": {
          "OnFailure": {
            "Name": "OutputExpression",
            "Context": {
              "Expression": "\"Invalid primary care provider GP practice code\""
            }
          }
        }
      },
      {
        "RuleName": "58.CurrentPosting.NonFatal",
        "LocalParams": [
          {
            "Name": "currentPosting",
            "Expression": "newParticipant.CurrentPosting"
          }
        ],
        "Expression": "string.IsNullOrEmpty(currentPosting) OR dbLookup.ValidateCurrentPosting(currentPosting)",
        "Actions": {
          "OnFailure": {
            "Name": "OutputExpression",
            "Context": {
              "Expression": "\"Missing or invalid Posting\""
            }
          }
        }
      },
      {
        "RuleName": "00.ValidateLanguageCode.NonFatal",
        "LocalParams": [
          {
            "Name": "languageCode",
            "Expression": "newParticipant.PreferredLanguage"
          }
        ],
        "Expression": "string.IsNullOrEmpty(languageCode) || dbLookup.ValidateLanguageCode(languageCode)",
        "Actions": {
          "OnFailure": {
            "Name": "OutputExpression",
            "Context": {
              "Expression": "\"Invalid preferred language code\""
            }
          }
        }
      }
    ]
  },
  {
    "WorkflowName": "New",
    "Rules": [
      {
        "RuleName": "47.ParticipantMustNotExist.Fatal",
        "Expression": "string.IsNullOrWhiteSpace(existingParticipant.NhsNumber)"
      }
    ]
  },
  {
    "WorkflowName": "Amended",
    "Rules": [
      {
        "RuleName": "22.ParticipantMustExist.Fatal",
        "Expression": "!string.IsNullOrWhiteSpace(existingParticipant.NhsNumber)"
      }
    ]
  },
  {
    "WorkflowName": "Removed",
    "Rules": [
      {
        "RuleName": "22.ParticipantMustExist.Fatal",
        "Expression": "!string.IsNullOrWhiteSpace(existingParticipant.NhsNumber)"
      }
    ]
  }
]
